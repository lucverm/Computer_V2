<Window x:Class="Computers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computers"
        xmlns:views="clr-namespace:Computers.Views"
        mc:Ignorable="d"
        Title="HELMo - Computers" Height="600" Width="960">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition Height="128*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="560" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <views:Explorer Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" />
        <views:Details Grid.Row="1" Grid.Column="1" />
    </Grid>
</Window>
