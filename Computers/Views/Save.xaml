<UserControl x:Class="Computers.Views.Save"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Computers.Views"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200"
             DataContext="{Binding Details,Source={StaticResource Locator}}">
    <StackPanel>
        <Button Content="Exporter en PDF" Margin="15" Width="120" Command="{Binding Exporter}"/>
        <Button Content="Exporter en Docx" Width="120" Command="{Binding Exporter}"/>
    </StackPanel>
</UserControl>
