<UserControl x:Class="Computers.Views.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:Computers.Views"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="240">
    <Button Command="{Binding Select}" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
        <Button.Content>
            <StackPanel>
                <Image Source="{Binding ImagePath}" Width="240" Height="140"></Image>
                <TextBlock Text="{Binding Name}" Style="{StaticResource ExplorerName}"></TextBlock>
                <TextBlock Text="{Binding Desc}" Style="{StaticResource Label}"></TextBlock>
            </StackPanel>
        </Button.Content>
    </Button>

</UserControl>
